<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ChickenMasala" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary</item>

        <item name="android:statusBarColor">?attr/background</item>
        <item name="background">@color/background</item>
    </style>


    <style name="TextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStyle.ToolBar" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_size_title_large</item>
    </style>

    <style name="TextStyle.Title.Large" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_title_medium</item>
    </style>

    <style name="TextStyle.Title.Medium" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>



    <style name="TextStyle.Body.Medium" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_body</item>
    </style>

    <style name="TextStyle.Body.Small" parent="TextStyle">
        <item name="android:textSize">@dimen/font_size_label</item>
    </style>


    <style name="TextStyle.Label.Large" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_body</item>
    </style>

    <style name="TextStyle.Label.Medium" parent="TextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/font_size_label</item>
    </style>
 <style name="splashscreentheme" parent="Theme.MaterialComponents.Light.NoActionBar">
     <item name="android:windowBackground">@drawable/splash_image</item>
 </style>

</resources>