<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_card_height"
    android:layout_marginBottom="@dimen/spacing_normal"
    android:layout_marginEnd="@dimen/spacing_normal"
    app:cardCornerRadius="@dimen/radius_large"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/zero"
            android:scaleType="centerCrop"
            android:src="@drawable/image_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/blur_image"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/zero"
            android:background="@drawable/blur_image"
            app:layout_constraintBottom_toBottomOf="@+id/dish_image"
            app:layout_constraintEnd_toEndOf="@+id/dish_image"
            app:layout_constraintStart_toStartOf="@+id/dish_image"
            app:layout_constraintTop_toTopOf="@+id/dish_image" />

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/radius_normal"
            android:layout_marginBottom="@dimen/spacing_small"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start|center"
            android:text="@string/spaghetti_meatballs"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_body"
            app:layout_constraintBottom_toTopOf="@+id/ingredient_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dish_image" />

        <TextView
            android:id="@+id/ingredient_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:drawablePadding="@dimen/spacing_small"
            android:text="6"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/whisk_icon"
            android:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/dish_image"
            app:layout_constraintStart_toStartOf="@+id/dish_name" />

        <TextView
            android:id="@+id/time_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero"
            android:layout_marginStart="@dimen/spacing_large"
            android:drawablePadding="@dimen/spacing_small"
            android:text="@string/_5_min"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/timer_icon"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/ingredient_count"
            app:layout_constraintStart_toEndOf="@id/ingredient_count"
            app:layout_constraintTop_toTopOf="@id/ingredient_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>